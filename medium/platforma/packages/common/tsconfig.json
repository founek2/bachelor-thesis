{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "composite": true,
        "outDir": "lib",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "lib": [
            "ES2019"
        ]
    },
    "include": [
        "src/**/*"
    ]
}