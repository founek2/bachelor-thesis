{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "composite": true,
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "esModuleInterop": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "lib/**/*"
    ]
}