{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "dist",
        "target": "ES2018",
        "composite": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "lib": [
            "esnext.asynciterable",
            "DOM", // were problems with @testing-library
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        // "paths": {
        //     "*": [
        //         "types/*.d.ts"
        //     ]
        // }
    },
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "include": [
        "src/**/*",
    ]
}